<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/ChatFragment"
        android:name="com.mongodb.realm.mongodblivechat.ChatFragment"
        android:label="@string/fragment_label"
        tools:layout="@layout/chat_fragment">
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="NoEmail" />
        <argument
            android:name="chatRoom"
            app:argType="string"
            android:defaultValue="Everyone"/>
        <action
            android:id="@+id/action_backTo_ChatFragment_to_chatRoomSelect"
            app:destination="@id/chatRoomSelect" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mongodb.realm.mongodblivechat.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_ChatRoomFragment"
            app:destination="@id/chatRoomSelect" />
    </fragment>
    <fragment
        android:id="@+id/chatRoomSelect"
        android:name="com.mongodb.realm.mongodblivechat.ChatRoomSelect"
        android:label="fragment_chat_room_select"
        tools:layout="@layout/fragment_chat_room_select" >
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="NoEmail" />
        <argument
            android:name="password"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_chatRoomSelect_to_ChatFragment"
            app:destination="@id/ChatFragment" />
    </fragment>
</navigation>