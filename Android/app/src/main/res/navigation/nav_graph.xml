<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/CounterFragment"
        android:name="com.mongodb.realm.livedataquickstart.CounterFragment"
        android:label="@string/fragment_label"
        tools:layout="@layout/counter_fragment">
        <argument
            android:name="email"
            app:argType="string"
            android:defaultValue="NoEmail" />
        <argument
            android:name="password"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mongodb.realm.livedataquickstart.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_CounterFragment"
            app:destination="@id/CounterFragment" />
    </fragment>
</navigation>